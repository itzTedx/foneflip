{
  "name": "foneflip",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "dev": "turbo dev",
    "dev:email": "turbo -F @ziron/email dev:email",
    "dev:email:dx": "pnpm -F @ziron/email dx",
    "lint": "turbo lint",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue",
    "db:generate": "pnpm -F @ziron/db generate",
    "db:migrate": "turbo -F @ziron/db migrate",
    "db:studio": "turbo -F @ziron/db studio",
    "db:reset": "pnpm -F @ziron/docker reset-db && pnpm db:migrate",
    "auth:generate": "pnpm -F @ziron/auth generate",
    "ui-add": "turbo run ui-add",
    "docker": "pnpm --filter @ziron/docker",
    "docker:up": "pnpm -F @ziron/docker up",
    "docker:down": "pnpm -F @ziron/docker down"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@turbo/gen": "^2.5.5",
    "@ziron/eslint-config": "workspace:*",
    "@ziron/prettier-config": "workspace:*",
    "@ziron/tsconfig": "workspace:*",
    "prettier": "catalog:",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  },
  "prettier": "@ziron/prettier-config"
}

{
  "name": "@ziron/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup --clean",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm with-env drizzle-kit studio --config=drizzle.config.ts --port=8080 --verbose",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "pnpm with-env drizzle-kit generate",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/pg": "^8.15.4",
    "@ziron/eslint-config": "workspace:*",
    "@ziron/prettier-config": "workspace:*",
    "@ziron/typescript-config": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.20.3",
    "typescript": "catalog:"
  },
  "prettier": "@ziron/prettier-config"
}
